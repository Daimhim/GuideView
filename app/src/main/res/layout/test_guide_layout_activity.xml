<?xml version="1.0" encoding="utf-8"?>
<org.daimhim.guideview.view.GuideLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/in_layout"
        app:layout_preview="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_simple_guide_view"/>

    <org.daimhim.guideview.view.GuideView
        android:id="@+id/gv_g_1"
        app:guide_bindId="@id/ll_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_add"
        app:layout_constraintTop_toBottomOf="@+id/gv_g_1"
        app:layout_constraintLeft_toLeftOf="@+id/gv_g_1"
        app:layout_constraintRight_toRightOf="@+id/gv_g_1"
        android:textColor="@color/color_434933"
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_add2"
        app:layout_constraintBottom_toTopOf="@+id/gv_g_1"
        app:layout_constraintLeft_toLeftOf="@+id/gv_g_1"
        app:layout_constraintRight_toRightOf="@+id/gv_g_1"
        android:textColor="@color/color_434933"
        android:text="@string/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</org.daimhim.guideview.view.GuideLayout>